{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "Football transfer fee trend from 2000 to 2019",
    "fontSize": 25
  },
  "data": {"url": "https://raw.githubusercontent.com/Qiyan-Zhong/FIT3179WEEK10/main/top250-00-19%20(1).csv"},
  "transform": [
    {
      "aggregate": [{
       "op": "sum",
       "field": "Transfer_fee",
       "as": "Total_Transfer_Fee"
      }],
      "groupby": ["Season"]
    }
  ],
  "layer":[{"mark": "bar",
  "encoding": {
    "x": {"field": "Season"},
    "y": {"field": "Total_Transfer_Fee", "type": "quantitative" 
  },
  "tooltip":[
      {"field":"Total_Transfer_Fee","type":"quantitative","title": "Total transfer fee"}
    ]
  }
  }]
}

