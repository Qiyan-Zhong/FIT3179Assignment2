{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 700,
  "title": {
    "text": "Football transfer fee trend from 2000 to 2019",
    "fontSize": 25
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Qiyan-Zhong/FIT3179WEEK10/main/top250-00-19%20(1).csv"
  },
  "transform": [
    {
      "aggregate": [
        {"op": "sum", "field": "Transfer_fee", "as": "Total_Transfer_Fee"}
      ],
      "groupby": ["Season"]
    }
  ],
  "encoding": {
        "x": {"field": "Season"},
        "y": {"field": "Total_Transfer_Fee", "type": "quantitative"}},
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "tooltip": [
          {"field": "Season"},
          {
            "field": "Total_Transfer_Fee",
            "type": "quantitative",
            "title": "Total transfer fee"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "alphabetic",
        "dx": 0,
        "dy":-20,
        "fontSize": 20,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "Total_Transfer_Fee", "type": "nominal","format":","},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Season'] == '2017-2018'||datum['Season']=='2003-2004'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Total_Transfer_Fee",
            "type": "quantitative",
            "title": "Total transfer fee",
            "format":","
          },
          {"field": "Season"}
        ]
      }
    }
  ]
}
